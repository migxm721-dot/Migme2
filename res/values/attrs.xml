<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PullToRefresh">
        <attr name="ptrAdapterViewBackground" format="reference|color" />
        <attr name="ptrHeaderBackground" format="reference|color" />
        <attr name="ptrHeaderTextColor" format="color" />
        <attr name="ptrMode">
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
            <flag name="both" value="0x3" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="FlowLayout">
        <attr name="horizontalSpace" format="dimension" />
        <attr name="verticalSpace" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="debugDraw" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean" />
        <attr name="layout_horizontalSpacing" format="dimension" />
        <attr name="layout_verticalSpacing" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pstsShowDivider" format="boolean" />
        <attr name="pstsShowIndicator" format="boolean" />
        <attr name="pstsShowUnderline" format="boolean" />
    </declare-styleable>

    <attr name="textSize" format="dimension" />
    <attr name="text" format="string" />
    <attr name="backgroundColor" format="color"/>
    <attr name="cornerRadius" format="dimension"/>

    <declare-styleable name="LinearLayoutEx_LayoutParams">
        <attr name="layout_autoHideWhenSoftKeyboardPresent" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TextButton">
        <attr name="text" />
        <attr name="backgroundColor"/>
        <attr name="cornerRadius"/>
    </declare-styleable>

    <declare-styleable name="HighlightTextButton">
        <attr name="text"/>
        <attr name="textColor" format="color"/>
        <attr name="highlightText" format="string"/>
        <attr name="highlightTextColor" format="color"/>
    </declare-styleable>

    <attr name="iconToTextSpace" format="dimension" />
    <attr name="iconSrc" format="reference" />
    <attr name="iconSize" format="dimension" />
    <attr name="useShortCount" format="boolean" />

    <declare-styleable name="IconCounterView">
        <attr name="iconToTextSpace"/>
        <attr name="iconSrc" />
        <attr name="iconSize" />
        <attr name="textSize" />
        <attr name="useShortCount"/>
    </declare-styleable>

    <declare-styleable name="IconTextView">
        <attr name="iconToTextSpace"/>
        <attr name="iconSrc" />
        <attr name="iconSize" />
        <attr name="textSize" />
        <attr name="useShortCount"/>
    </declare-styleable>

    <declare-styleable name="SlidingPanelContainer_LayoutParams">
        <attr name="layout_panelLocation" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="UsernameWithLabelsView">
        <attr name="textSize"/>
        <attr name="labelSize" format="dimension" />
    </declare-styleable>
    
    <!-- All Access Button -->
    <declare-styleable name="ContextActionsLayout">
        <attr name="layoutPadding" format="dimension|reference"/>
        <attr name="layoutPaddingBetweenItems" format="dimension|reference"/>
        <attr name="degreesToArcCenter" format="integer|reference"/>
        <attr name="arcRadius" format="dimension|reference"/>
        <attr name="itemSize" format="dimension|reference"/>
    </declare-styleable>
    <declare-styleable name="OffsetLayout">
        <attr name="offsetX" format="dimension|reference" />
        <attr name="offsetY" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="HoloCircularProgressBar">
        <attr name="stroke_width" format="dimension" />
        <attr name="progress" format="float" />
        <attr name="marker_progress" format="float" />
        <attr name="progress_color" format="color" />
        <attr name="progress_background_color" format="color" />
        <attr name="thumb_visible" format="boolean" />
        <attr name="marker_visible" format="boolean" />
        <attr name="android:gravity" />
    </declare-styleable>

    <attr name="circularProgressBarStyle" format="reference" />

</resources>