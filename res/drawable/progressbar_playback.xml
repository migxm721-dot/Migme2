<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background">
    <shape>
        <corners android:radius="2dip" />
        <gradient
            android:startColor="@color/play_seekbar_background"
            android:centerY="0.75"
            android:endColor="@color/play_seekbar_background"
            android:angle="270" />
    </shape>
</item>

<item android:id="@android:id/progress">
    <clip>
        <shape>
            <corners
                android:radius="2dip" />
            <gradient
                android:startColor="@color/progressbar_start"
                android:endColor="@color/play_seekbar_color"
                android:angle="270" />
        </shape>
    </clip>
</item>

</layer-list>