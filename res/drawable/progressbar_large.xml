<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background">
    <shape>
        <corners android:radius="5dip" />
        <gradient
                android:startColor="@color/progressbar_large_bg_start"
                android:centerColor="@color/progressbar_large_bg_center"
                android:centerY="0.75"
                android:endColor="@color/progressbar_large_bg_end"
                android:angle="270"
        />
    </shape>
</item>

<item android:id="@android:id/secondaryProgress">
    <clip>
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="@color/progressbar_large_secondaryprogress_bg_start"
                    android:centerColor="@color/progressbar_large_secondaryprogress_bg_center"
                    android:centerY="0.75"
                    android:endColor="@color/progressbar_large_secondaryprogress_bg_end"
                    android:angle="270"
            />
        </shape>
    </clip>
</item>
<item android:id="@android:id/progress">
    <clip>
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="@color/progressbar_large_primaryprogress_bg_start"
                android:endColor="@color/progressbar_large_primaryprogress_bg_end"
                android:angle="270" />
        </shape>
    </clip>
</item>

</layer-list>