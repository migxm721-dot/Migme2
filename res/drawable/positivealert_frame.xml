<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Positive alert Title -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/positivealert_title_bg" />
            <corners android:radius="@dimen/cornered_bigger_box_radius" />
            <stroke
                android:width="@dimen/alertpopup_stroke_width"
                android:color="@color/alertpopup_stroke" />
        </shape>
    </item>
    <!-- Positive alert Content -->
    <item android:top="@dimen/positivealert_title_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/positivealert_content_bg" />
            <corners 
                android:bottomLeftRadius="@dimen/cornered_bigger_box_radius" 
                android:bottomRightRadius="@dimen/cornered_bigger_box_radius" />
        
            <stroke
                android:width="@dimen/alertpopup_stroke_width"
                android:color="@color/alertpopup_stroke" />
        
       </shape>
    </item>
</layer-list>  
