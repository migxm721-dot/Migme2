<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    xmlns:migme="http://schemas.android.com/apk/res/com.projectgoth"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cover_photo_height"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/cover_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/header_profile_cd_cover_photo"
            android:scaleType="fitXY" />

        <com.projectgoth.ui.widget.ButtonEx
            android:id="@+id/chat_button"
            style="@style/Button.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xlarge_margin"
            android:padding="@dimen/normal_padding"
            mig33:type="button_orange"
            android:visibility="gone"/>

        <!-- display photo and presence -->

        <RelativeLayout
            android:id="@+id/display_pic_container"
            android:layout_width="@dimen/contact_pic_size_xlarge"
            android:layout_height="@dimen/contact_pic_size_xlarge"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin" >

            <ImageView
                android:id="@+id/display_pic_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/header_profile_cd_display_pic_profile"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/display_pic_overlay"
                android:layout_width="@dimen/icon_presence_overlay"
                android:layout_height="@dimen/icon_presence_overlay"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/header_profile_cd_display_pic_overlay"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- user info -->

    <RelativeLayout
        android:id="@+id/user_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/normal_padding" >

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/default_green"
            android:textSize="@dimen/text_size_xlarge" />

        <LinearLayout
            android:id="@+id/user_details_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <com.projectgoth.ui.widget.UsernameWithLabelsView
                android:id="@+id/labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/small_margin"
                migme:labelSize="@dimen/miglevel_size"
                migme:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:id="@+id/user_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/username"
                android:layout_alignBottom="@id/user_details_line"
                android:layout_marginRight="@dimen/large_margin"
                android:src="@drawable/ad_share_grey"
                />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/up_shadow_height"
        android:background="@color/gray_background" >
    </View>

</LinearLayout>