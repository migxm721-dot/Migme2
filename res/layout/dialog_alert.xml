<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/normal_margin"
    android:background="@drawable/rounded_corner_white"
    android:padding="@dimen/xsmall_padding" >

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="@dimen/icon_width_small"
        android:layout_height="@dimen/icon_height_small"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/dialog_alert_cd_close_button"
        android:padding="@dimen/small_padding"
        android:scaleType="fitXY"
        android:src="@drawable/ad_close_grey" />

    <TextView
        android:id="@+id/alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/normal_margin"
        android:gravity="center_horizontal"
        android:textColor="@color/default_text"
        android:textSize="@dimen/text_size_large"
        android:textStyle="normal"
        android:visibility="gone" />

    <View
        android:id="@+id/title_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xsmall_margin"
        android:layout_below="@+id/alert_title"
        android:background="@color/default_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/title_separator"
        android:layout_margin="@dimen/normal_margin"
        android:gravity="center_horizontal"
        android:textColor="@color/default_text"
        android:textSize="@dimen/text_size_large" />

    <com.projectgoth.ui.widget.ButtonEx
        android:id="@+id/alert_confirm_button"
        style="@style/Button.Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_message"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/medium_margin"
        mig33:type="button_orange" />

</RelativeLayout>