<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_padding" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/contact_pic_size_normal"
        android:layout_height="@dimen/contact_pic_size_normal"
        android:layout_marginLeft="@dimen/large_margin"
        android:contentDescription="@string/holder_chat_list_item_cd_icon"
        android:padding="@dimen/small_padding"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/chatroom_mark"
        android:layout_width="@dimen/chatroom_icon_size"
        android:layout_height="@dimen/chatroom_icon_size"
        android:layout_alignBottom="@id/icon"
        android:layout_alignLeft="@id/icon"
        android:layout_margin="@dimen/small_margin"
        android:background="@drawable/solid_circle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xxxlarge" />

    <ImageView
        android:id="@+id/subicon_bottom_left"
        android:layout_width="@dimen/icon_presence_overlay_small"
        android:layout_height="@dimen/icon_presence_overlay_small"
        android:layout_alignBottom="@id/icon"
        android:layout_alignLeft="@id/icon"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:contentDescription="@string/holder_chat_list_item_cd_subicon_bottom_left"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_toLeftOf="@+id/pin"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/default_green"
        android:textSize="@dimen/text_size_xlarge" />

    <com.projectgoth.ui.widget.TextViewEx
        android:id="@+id/sublabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/label"
        android:layout_below="@id/label"
        android:layout_marginBottom="@dimen/xsmall_margin"
        android:layout_marginRight="@dimen/xxlarge_margin"
        android:layout_toLeftOf="@+id/wrapper"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/default_text"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="normal"
        android:visibility="visible" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/label"
        android:layout_marginRight="@dimen/normal_margin"
        android:singleLine="true"
        android:textColor="@color/default_timestamp"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/pin"
        android:layout_width="@dimen/icon_width_xxxsmall"
        android:layout_height="@dimen/icon_width_xxxsmall"
        android:layout_alignTop="@id/label"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_toLeftOf="@id/timestamp"
        android:contentDescription="@string/holder_chat_list_item_cd_pin"
        android:scaleType="fitXY"
        android:src="@drawable/ic_pin"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_alignBottom="@+id/sublabel"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ad_mute"
            android:visibility="gone" />

        <TextView
            android:id="@+id/msgcounter"
            android:layout_width="@dimen/notification_counter_width"
            android:layout_height="@dimen/notification_counter_height"
            android:background="@drawable/unread_msg_counter_bg"
            android:textSize="@dimen/text_size_xsmall"
            android:layout_marginLeft="@dimen/small_margin"
            android:textStyle="normal"
            android:gravity="center"
            android:visibility="gone" />
        </LinearLayout>

    <ImageView
            android:id="@+id/check"
            android:layout_width="@dimen/icon_width_xxsmall"
            android:layout_height="@dimen/icon_width_xxsmall"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/medium_margin"
            android:contentDescription="@string/holder_friend_list_item_cd_check"
            android:src="@drawable/msg_one_tick"
            android:visibility="gone"/>

</RelativeLayout>