<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background">    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	     <!--  People preview -->
         <TextView
	        android:id="@+id/people_section_title"
	        style="@style/SectionTitle" />
         <LinearLayout
             android:id="@+id/profile_holders_container"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:orientation="vertical"
             />
         <include 
             android:id="@+id/search_more_people"
             layout="@layout/footer_search_more_text" />
         
         <!--  Posts preview -->
         <TextView
            android:id="@+id/posts_section_title"
            style="@style/SectionTitle" />
         <LinearLayout
             android:id="@+id/post_holders_container"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:orientation="vertical"
             />
         <include 
             android:id="@+id/search_more_posts"
             layout="@layout/footer_search_more_text" />
    </LinearLayout>
</ScrollView>
