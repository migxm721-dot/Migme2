<?xml version="1.0" encoding="utf-8"?>
<com.projectgoth.ui.widget.RelativeLayoutEx xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:migme="http://schemas.android.com/apk/res-auto"
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_header_height"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ad_star_bg">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ad_migme" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/normal_margin">

            <Button
                android:id="@+id/signupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/normal_margin"
                android:background="@null"
                android:textColor="@color/default_green" />

            <ImageView
                android:id="@+id/img_fragment_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ad_triangle_green" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@null"
            android:textColor="@color/default_green" />


    </RelativeLayout>

    <TextView
        android:id="@+id/connection_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone"
        android:gravity="center"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:layout_below="@id/header_container" />

    <RelativeLayout
        android:id="@+id/slogan_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_bot_layout_height"
        android:layout_below="@id/connection_status"
        android:background="@color/logo_background">

        <ImageView
            android:id="@+id/pick_name_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/xlarge_margin_bot"
            android:src="@drawable/ad_username_greenbot" />

        <TextView
            android:id="@+id/pick_name_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xlarge_margin_bot_text"
            android:layout_marginRight="@dimen/xlarge_margin_bot_text_right"
            android:layout_toRightOf="@id/pick_name_image"
            android:textColor="@color/white"
            android:textSize="@dimen/login_text_bot_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_suggestion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_container"
        android:background="@drawable/rectangle_803x"
        android:paddingBottom="@dimen/signup_suggested_body_margin_bottom"
        android:paddingLeft="@dimen/signup_suggested_body_margin_left_right"
        android:paddingRight="@dimen/signup_suggested_body_margin_left_right">

        <TextView
            android:id="@+id/signup_suggestion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/signup_suggested_text_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_suggestion_title">

            <com.projectgoth.ui.widget.SuggestedNameBox
                android:id="@+id/signup_suggested_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/signup_suggested_text_margin" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/signup_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@id/signup_suggestion_container"
        android:layout_below="@+id/signup_suggestion_container"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal">

            <EditText
                android:id="@+id/signup_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/nextButton"
                android:background="@null"
                android:ellipsize="end"
                android:focusable="true"
                android:singleLine="true"
                android:textColor="@color/signup_input_text"
                android:textColorHint="@color/signup_text_light_grey" />

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="@dimen/signup_next_button_padding"
                android:src="@drawable/ad_arrow_next" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="@dimen/signup_progressbar_height_width"
                android:layout_height="@dimen/signup_progressbar_height_width"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_divider_padding_height"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@color/signup_text_light_grey" />

        <TextView
            android:id="@+id/username_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:textColor="@color/signup_text_light_grey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/signup_input_container"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.projectgoth.ui.widget.DateTextView
            android:id="@+id/or_line_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/xsmall_padding"
            android:paddingLeft="@dimen/xxxxlarge_padding"
            android:paddingRight="@dimen/xxxxlarge_padding"
            android:paddingTop="@dimen/xsmall_padding"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/text_size_small" />

        <com.projectgoth.ui.widget.HighlightTextButton
            android:id="@+id/btn_fbconnect"
            style="@style/TextButton.Login.ForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:drawableBottom="@color/transparent"
            android:drawableLeft="@drawable/ad_facebook_blue"
            android:drawablePadding="@dimen/normal_padding"
            android:minHeight="@dimen/signup_hightlist_text_button_min_height"
            migme:highlightText="Connect with Facebook"
            migme:highlightTextColor="@color/fb_blue"
            migme:text="Connect with Facebook"
            migme:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_padding" />

        <RelativeLayout
            android:id="@+id/terms_of_use_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txt_terms_of_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small_medium" />

            <TextView
                android:id="@+id/txt_terms_of_use_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_terms_of_use"
                android:textColor="@color/default_green"
                android:textSize="@dimen/text_size_small_medium" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/privacy_policy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txt_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_small_medium" />

            <TextView
                android:id="@+id/txt_privacy_policy_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_privacy_policy"
                android:textColor="@color/default_green"
                android:textSize="@dimen/text_size_small_medium" />

        </RelativeLayout>

        <View
            android:id="@+id/padding_above_discover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.projectgoth.ui.widget.TextButton
                android:id="@+id/btn_discover"
                style="@style/TextButton.Discover"
                android:layout_width="@dimen/button_width_xlarge"
                android:layout_height="@dimen/button_height_normal"
                android:layout_centerHorizontal="true"
                migme:text="PEEK INSIDE" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_padding" />
    </LinearLayout>


</com.projectgoth.ui.widget.RelativeLayoutEx>