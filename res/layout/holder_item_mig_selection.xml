<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:background="@color/white">

    <View
        android:id="@+id/left_separator"
        android:layout_width="@dimen/normal_margin"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_toRightOf="@id/left_separator"
        android:background="@drawable/outline_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/channel_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/default_green"
            android:textSize="@dimen/text_size_normal" />

        <RelativeLayout
            android:layout_width="@dimen/music_grid_pic_size"
            android:layout_height="@dimen/music_grid_pic_size"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/channel_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/normal_padding"
                android:paddingLeft="@dimen/medium_padding"
                android:paddingRight="@dimen/medium_padding"
                android:src="@drawable/ic_default_cover_loading" />

            <ImageView
                android:id="@+id/channel_favorite"
                android:layout_width="@dimen/icon_width_xsmall"
                android:layout_height="@dimen/icon_height_xsmall"
                android:layout_alignBottom="@+id/channel_image"
                android:layout_alignLeft="@+id/channel_image"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:src="@drawable/ad_favourite_pink"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/channel_source_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_width_xxxsmall"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:padding="@dimen/xsmall_padding"
            android:scaleType="fitEnd"
            android:src="@drawable/ad_deezer" />

    </LinearLayout>

</RelativeLayout>