<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/normal_margin"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="@dimen/icon_width_small"
        android:layout_height="@dimen/icon_height_small"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/normal_margin"
        android:padding="@dimen/small_padding"
        android:contentDescription="@string/fragment_badge_info_cd_close_button"
        android:src="@drawable/ad_close_grey" />

    <ImageView
        android:id="@+id/badge_icon"
        android:layout_width="@dimen/badge_icon_size_large"
        android:layout_height="@dimen/badge_icon_size_large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/fragment_badge_info_cd_badge_icon"
        android:layout_marginTop="@dimen/xlarge_margin" >
    </ImageView>

    <TextView
        android:id="@+id/badge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/badge_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:textSize="@dimen/text_size_xlarge" />

    <TextView
        android:id="@+id/badge_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/badge_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_large" />

    <View
        android:id="@+id/separator_down"
        android:layout_width="match_parent"
        android:layout_height="@dimen/up_shadow_height"
        android:layout_below="@+id/badge_state"
        android:layout_marginBottom="@dimen/xlarge_margin"
        android:layout_marginTop="@dimen/xlarge_margin"
        android:background="@drawable/status_container_downshadow" >
    </View>

    <TextView
        android:id="@+id/badge_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator_down"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:textSize="@dimen/text_size_xlarge" />

    <TextView
        android:id="@+id/badge_validity_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/badge_description"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/xlarge_margin"
        android:layout_marginTop="@dimen/xlarge_margin"
        android:textSize="@dimen/text_size_xlarge" />

</RelativeLayout>