<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background"
    android:gravity="center_vertical"
    android:padding="@dimen/normal_padding" >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/sharebox_panel_height"
        android:layout_height="@dimen/sharebox_panel_height"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:background="@color/black"
        android:contentDescription="@string/holder_simplepostpreview_cd_photo"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_photo_from_gallery"
        android:visibility="gone" />

    <TextView
        android:id="@+id/author"
        style="@style/simplepostpreview_text"
        android:layout_toRightOf="@+id/photo"
        android:singleLine="true"
        android:textColor="@color/default_green"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/content"
        style="@style/simplepostpreview_text"
        android:layout_below="@+id/author"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/photo"
        android:maxLines="2"
        android:textColor="@color/gray_text" />

</RelativeLayout>