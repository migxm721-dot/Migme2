<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_white" >

    <LinearLayout
        android:id="@+id/pack_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/pack_icon"
            android:layout_width="@dimen/sticker_thumb_height"
            android:layout_height="@dimen/sticker_thumb_height"
            android:layout_margin="@dimen/large_margin"
            android:contentDescription="@string/fragment_sticker_pack_details_cd_pack_icon"
            android:src="@drawable/ad_piggy" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pack_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text"
                android:textSize="@dimen/text_size_xxlarge" />

            <TextView
                android:id="@+id/pack_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_timestamp"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </LinearLayout>

    <com.projectgoth.ui.widget.ButtonEx
        android:id="@+id/download_pack_button"
        style="@style/Button.Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pack_details_container"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/large_margin"
        android:textSize="@dimen/text_size_large"
        android:textStyle="normal"
        mig33:type="button_orange" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/share_box_actions_separator_height"
        android:layout_below="@+id/download_pack_button"
        android:layout_marginBottom="@dimen/normal_margin"
        android:background="@color/share_box_actions_separator" />

    <GridView
        android:id="@+id/pack_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/separator"
        android:contentDescription="@string/fragment_sticker_pack_details_cd_pack_grid"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/medium_margin" >
    </GridView>

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="@dimen/icon_width_small"
        android:layout_height="@dimen/icon_height_small"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/small_margin"
        android:contentDescription="@string/fragment_sticker_pack_details_cd_close_button"
        android:padding="@dimen/small_padding"
        android:src="@drawable/ad_close_grey" />

</RelativeLayout>