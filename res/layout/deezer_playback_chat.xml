<?xml version="1.0" encoding="utf-8"?>
<com.projectgoth.music.deezer.DeezerPlaybackChat android:id="@+id/playback_body_in_chat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/playback_chat_body_height"
        android:background="@color/playback_background_dark_grey"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/playback_chat_cover_height_width"
            android:layout_height="@dimen/playback_chat_cover_height_width">

            <ImageView android:id="@+id/album_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="@dimen/playback_chat_cover_padding"
                android:src="@drawable/ic_default_cover_loading" />

            <ImageView android:id="@+id/chat_playing_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="@dimen/playback_chat_cover_playing_padding"
                android:src="@drawable/ic_cover_play" />

            <view
                android:id="@+id/progress_bar"
                class="com.pascalwelsch.holocircularprogressbar.HoloCircularProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/playback_chat_cover_margin"
                android:padding="@dimen/playback_chat_cover_padding" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/playback_divider_width"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/playback_divider_padding_height"
            android:layout_marginLeft="@dimen/playback_divider_padding_width"
            android:layout_marginRight="@dimen/playback_divider_padding_width"
            android:layout_marginTop="@dimen/playback_divider_padding_height"
            android:background="@color/playback_divider_grey" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/deezerBanner"
                android:layout_width="@dimen/playback_deezer_banner_chat_width"
                android:layout_height="@dimen/playback_deezer_banner_chat_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/playback_deezer_banner_chat_margin"
                android:paddingLeft="@dimen/playback_deezer_banner_chat_padding"
                android:paddingRight="@dimen/playback_deezer_banner_chat_padding"
                android:paddingTop="@dimen/playback_deezer_banner_chat_padding"
                android:src="@drawable/ic_deezer_banner_white" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/deezerBanner"
                android:layout_marginLeft="@dimen/playback_chat_textview_layout_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/song_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="@color/playback_label_white"
                    android:textSize="@dimen/playback_chat_title" />

                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="@color/playback_label_green"
                    android:textSize="@dimen/playback_chat_subtitle" />

                <TextView
                    android:id="@+id/track_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="@color/playback_label_green"
                    android:textSize="@dimen/playback_chat_subtitle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/playback_chat_controlbar_height"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/playback_chat_button_layout_margin_bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/playback_chat_button_layout_padding_left"
                android:paddingRight="@dimen/playback_chat_button_layout_padding_right">

                <ImageButton
                    android:id="@+id/previousSong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/ic_action_previous_grey" />

                <ImageButton
                    android:id="@+id/playAndPause"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/ic_action_play_grey_big" />

                <ImageButton
                    android:id="@+id/nextSong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/ic_action_forward_white_big" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</com.projectgoth.music.deezer.DeezerPlaybackChat>