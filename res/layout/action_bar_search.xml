<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/search_box_button"
        android:layout_width="@dimen/icon_width_xsmall"
        android:layout_height="@dimen/icon_height_xsmall"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:padding="@dimen/small_padding"
        android:contentDescription="@string/action_bar_search_cd_search_box_button"
        android:src="@drawable/ic_find" />

    <EditText
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:background="@drawable/rounded_rect_search_box"
        android:ellipsize="end"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/small_padding"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xlarge"
        android:contentDescription="@string/action_bar_search_cd_search_box"
        android:textCursorDrawable="@drawable/search_box_cursor" />

</LinearLayout>