<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/normal_margin"
        layout="@layout/header_gift_center" />

    <ListView
        android:id="@+id/recipient_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer_view"
        android:layout_below="@+id/header_view"
        android:contentDescription="@string/fragment_gift_recipient_selection_cd_recipient_list"
        android:choiceMode="singleChoice" />

    <RelativeLayout
        android:id="@+id/footer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gift_preview_container"
        android:padding="@dimen/normal_padding" >

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@color/default_text"
            android:textSize="@dimen/text_size_xlarge" />

        <com.projectgoth.ui.widget.ButtonEx
            android:id="@+id/next_button"
            style="@style/Button.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal"
            mig33:type="button_orange" />
    </RelativeLayout>

</RelativeLayout>