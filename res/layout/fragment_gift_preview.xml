<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/normal_margin"
        layout="@layout/header_gift_center" />

    <ScrollView
        android:id="@+id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_view">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/gift_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gift_preview_container"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/gift_recipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@color/default_text"
                android:textSize="@dimen/text_size_xlarge" />

            <ImageView
                android:id="@+id/gift_image"
                android:layout_width="@dimen/emoticon_gridSize_large"
                android:layout_height="@dimen/emoticon_gridSize_large"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/normal_margin"
                android:contentDescription="@string/fragment_gift_preview_cd_gift_image"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/gift_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:singleLine="true"
                    android:textColor="@color/default_text"
                    android:textSize="@dimen/text_size_xlarge" />

                <TextView
                    android:id="@+id/gift_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:minLines="2"
                    android:textColor="@color/default_text"
                    android:textSize="@dimen/text_size_xlarge" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/selected_gift_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gift_details_container"
                android:layout_margin="@dimen/normal_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="@dimen/normal_padding"
                    android:textColor="@color/default_text"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/number_of_recipients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="@dimen/normal_padding"
                    android:singleLine="true"
                    android:textColor="@color/default_text"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_padding"
                    android:singleLine="true"
                    android:textColor="@color/default_text"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gift_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:orientation="horizontal"
            android:padding="@dimen/small_padding"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/gift_class_icon"
                android:layout_width="@dimen/icon_width_xxsmall"
                android:layout_height="@dimen/icon_height_xxsmall"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:contentDescription="@string/fragment_gift_preview_cd_gift_class_icon"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/gift_class_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_margin"
                android:textColor="@color/text_light_gray"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <TextView
            android:id="@+id/recipient_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/command_tip"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:singleLine="true"
            android:textColor="@color/default_text"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/recipients_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selected_recipient_panel_height"
            android:layout_below="@+id/recipient_label"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@drawable/border_textbox"
            android:visibility="gone"
            android:padding="@dimen/small_padding" >

            <ScrollView
                android:id="@+id/recipient_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/normal_margin"
                android:fillViewport="true"
                android:orientation="vertical" >

                <com.projectgoth.ui.widget.FlowLayout
                    android:id="@+id/selected_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    mig33:horizontalSpace="@dimen/normal_margin"
                    mig33:verticalSpace="@dimen/normal_margin" >

                    <TextView
                        android:id="@+id/container_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small_padding"
                        android:textColor="@color/default_hint"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="normal" />
                </com.projectgoth.ui.widget.FlowLayout>

            </ScrollView>

        </RelativeLayout>

        <TextView
            android:id="@+id/gift_msg_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:textColor="@color/light_text_color"
            android:textSize="@dimen/text_size_xlarge" />

        <EditText
            android:id="@+id/gift_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:background="@drawable/border_textbox"
            android:inputType="text"
            android:textColor="@color/default_text"
            android:textColorHint="@color/default_hint"
            android:contentDescription="@string/fragment_gift_preview_cd_gift_msg"
            android:textSize="@dimen/text_size_large" />

        <CheckBox
            android:id="@+id/check_also_repost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="@dimen/small_margin"/>

        <com.projectgoth.ui.widget.ButtonEx
            android:id="@+id/send_gift"
            style="@style/Button.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal"
            mig33:type="button_orange" />
    </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/friend_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="@dimen/normal_padding"
        android:visibility="gone" >

        <EditText
            android:id="@+id/friend_list_filter"
            style="@style/Form.TextField.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_textbox"
            android:contentDescription="@string/fragment_gift_cd_friend_list_filter"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true" />

        <ListView
            android:id="@+id/friend_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/fragment_gift_cd_friend_list" />
    </LinearLayout>

</RelativeLayout>