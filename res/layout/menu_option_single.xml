<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="normal"
        android:visibility="gone" />

    <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_below="@id/title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xxxlarge"
            android:textStyle="normal"
            android:visibility="gone" />

    <com.projectgoth.ui.widget.ButtonEx
            android:id="@+id/action_button"
            style="@style/Button.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/icon_label"
            android:layout_margin="@dimen/small_margin"
            android:gravity="center"
            android:paddingLeft="@dimen/xlarge_padding"
            android:paddingRight="@dimen/xlarge_padding"
            android:paddingTop="@dimen/medium_padding"
            android:paddingBottom="@dimen/medium_padding"
            mig33:type="button_orange"
            android:visibility="gone"/>

</RelativeLayout>