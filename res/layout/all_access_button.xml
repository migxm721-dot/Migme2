
<!-- This is the all-access button that will be used for central navigation -->
<com.projectgoth.ui.widget.AllAccessButton 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_access_button"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/all_access_button_background"
	>
	
    <!-- This is the component that handles the context buttons -->
    <com.projectgoth.ui.widget.allaccessbutton.ContextActionsLayout
        android:id="@+id/context_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        custom:layoutPaddingBetweenItems="@dimen/all_access_padding_between_items"
        custom:degreesToArcCenter="@integer/all_access_context_degrees_to_arc_center"
	    custom:arcRadius="@dimen/all_access_context_arc_radius"
	    custom:itemSize="@dimen/all_access_context_item_size"
        android:visibility="gone" />

    <!-- Circle that appears behind the main button and is dragged to either side -->
    <View
        android:id="@+id/main_button_ring"
        android:layout_width="@dimen/all_access_main_button_dimens"
        android:layout_height="@dimen/all_access_main_button_dimens"
        android:background="@drawable/all_access_button_ring_shape"
        android:scaleType="center"
        android:visibility="invisible" />
    
    <!-- Pulse animation -->
    <FrameLayout
        android:id="@+id/pulse_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:visibility="invisible"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/all_access_button_pulse_1"
            android:scaleType="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/all_access_button_pulse_2"
            android:scaleType="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/all_access_button_pulse_3"
            android:scaleType="center"
            />
    </FrameLayout>
    
    <!-- This is the component that handles the navigation buttons -->
    <com.projectgoth.ui.widget.allaccessbutton.NavigationActionsLayout
        android:id="@+id/navigation_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        custom:degreesToArcCenter="@integer/all_access_navigation_degrees_to_arc_center"
        custom:arcRadius="@dimen/all_access_navigation_arc_radius"
        custom:itemSize="@dimen/all_access_side_button_dimens"
        android:visibility="gone" />

    <!-- Main button -->
    <ImageView
        android:id="@+id/main_button"
        android:layout_width="@dimen/all_access_main_button_dimens"
        android:layout_height="@dimen/all_access_main_button_dimens"
        android:layout_centerInParent="true"
        android:background="@drawable/all_access_button_shape_transition"
        android:src="@drawable/ad_main_plus_white"
        android:contentDescription="@string/all_access_button_cd_main_button"
        android:scaleType="center" />

    <!-- Plus animation -->
    <View
        android:id="@+id/left_chevron"
        android:layout_width="12dp"
        android:layout_height="12dp"
        custom:offsetX="-5.5dp"
        custom:offsetY="-5.5dp"
        android:background="@drawable/ad_main_arrowleft_white"
        android:scaleType="center"
        android:visibility="invisible" />
    <View
        android:id="@+id/right_chevron"
        android:layout_width="12dp"
        android:layout_height="12dp"
        custom:offsetX="5.5dp"
        custom:offsetY="5.5dp"
        android:background="@drawable/ad_main_arrowright_white"
        android:scaleType="center"
        android:visibility="invisible" />
    
    <com.projectgoth.ui.widget.tooltip.ToolTipRelativeLayout
            android:id="@+id/activity_main_tooltipframelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</com.projectgoth.ui.widget.AllAccessButton>
