<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/normal_margin"
    android:background="@color/beige_background"
    android:orientation="vertical"
    android:padding="@dimen/normal_padding" >

    <LinearLayout
        android:id="@+id/gift_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/gift_image"
            android:layout_width="@dimen/item_height_normal"
            android:layout_height="@dimen/item_height_normal"
            android:layout_margin="@dimen/normal_margin"
            android:contentDescription="@string/fragment_gift_purchased_cd_gift_image"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_padding"
            android:singleLine="true"
            android:textColor="@color/default_text"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal" />
    </LinearLayout>

    <com.projectgoth.ui.widget.ButtonEx
        android:id="@+id/back_to_gifts"
        style="@style/Button.Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gift_details_container"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="normal"
        mig33:type="button_orange" />

    <GridView
        android:id="@+id/recipient_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back_to_gifts"
        android:contentDescription="@string/fragment_gift_purchased_cd_recipient_grid"
        android:fadeScrollbars="false"
        android:fadingEdge="none"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:visibility="gone" >
    </GridView>

</RelativeLayout>