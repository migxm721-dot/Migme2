<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/info_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:padding="@dimen/normal_padding" >

        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="@dimen/group_icon_size"
            android:layout_height="@dimen/group_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/header_group_page_cd_group_icon"
            android:scaleType="fitXY"
            android:src="@drawable/ic_default_group" />

        <ImageView
            android:id="@+id/arrow_button"
            android:layout_width="@dimen/icon_width_small"
            android:layout_height="@dimen/icon_height_small"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/normal_margin"
            android:contentDescription="@string/header_group_page_cd_arrow_button"
            android:src="@drawable/arrow_menu_button"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/group_name_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_toLeftOf="@id/arrow_button"
            android:layout_toRightOf="@id/group_icon"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/group_official"
                android:layout_width="@dimen/icon_width_xxsmall"
                android:layout_height="@dimen/icon_width_xxsmall"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/header_group_page_cd_group_official"
                android:scaleType="fitXY"
                android:src="@drawable/labels_star"
                android:visibility="invisible" >
            </ImageView>

            <TextView
                android:id="@+id/group_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="@color/default_text"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/group_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/group_name_container"
            android:layout_below="@id/group_name_container"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/default_text"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_size_medium" >
        </TextView>
    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/info_container"
        android:background="@color/light_beige_separator" >
    </View>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height_large"
        android:layout_below="@id/divider2"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/play_button_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/icon_width_xsmall"
                    android:layout_height="@dimen/icon_height_xsmall"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_group_games" />

                <TextView
                    android:id="@+id/play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/default_text"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@color/light_beige_separator" >
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invite_button_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/icon_width_xsmall"
                    android:layout_height="@dimen/icon_width_xsmall"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_group_invite" />

                <TextView
                    android:id="@+id/invite_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/default_text"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@color/light_beige_separator" >
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/join_button_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/icon_width_xsmall"
                    android:layout_height="@dimen/icon_width_xsmall"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_group_invite" />

                <TextView
                    android:id="@+id/join_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/default_text"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@color/light_beige_separator" >
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pending_approval_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:visibility="gone" >

            <TextView
                android:id="@+id/pending_approval_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/default_text"
                android:textSize="@dimen/text_size_large" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@color/light_beige_separator" >
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chat_button_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/icon_width_xsmall"
                    android:layout_height="@dimen/icon_width_xsmall"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_group_chatrooms" />

                <TextView
                    android:id="@+id/chat_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/default_text"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/buttons_container"
        android:background="@color/light_beige_separator" >
    </View>

    <View
        android:id="@+id/divider4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/divider3"
        android:background="@color/light_beige_separator"
        android:visibility="gone" >
    </View>

    <LinearLayout
        android:id="@+id/pending_requests"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height_large"
        android:layout_below="@id/divider4"
        android:background="@color/light_beige_separator"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="@dimen/icon_width_xsmall"
            android:layout_height="@dimen/icon_width_xsmall"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_margin"
            android:scaleType="fitXY"
            android:src="@drawable/ic_group_notify" >
        </ImageView>

        <TextView
            android:id="@+id/pending_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/normal_margin"
            android:gravity="center_vertical"
            android:textColor="@color/default_text"
            android:textSize="@dimen/text_size_large" >
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/divider5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/pending_requests"
        android:background="@color/light_beige_separator"
        android:visibility="gone" >
    </View>

</RelativeLayout>