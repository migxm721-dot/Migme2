<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/normal_padding"
                  android:orientation="vertical">
        
        <TextView
                android:id="@+id/explain"
                style="@style/game_detail_page_information_content"
                android:textStyle="normal"
            	android:textColor="@color/dark_text_color"
                />
        <TextView
                android:id="@+id/description_title"
                android:text="Description"
            	android:textColor="@color/dark_text_color"
            	android:textStyle="normal"
                android:layout_marginTop="@dimen/normal_padding"
                style="@style/game_detail_page_information_title"
                />
        <TextView
            	android:textColor="@color/dark_text_color"
                android:textStyle="normal"
                android:id="@+id/description_content"
                style="@style/game_detail_page_information_content"
                />
        <TextView
            	android:textColor="@color/dark_text_color"
                android:textStyle="normal"
                android:id="@+id/how_to_play_title"
                android:text="How to play"
                android:layout_marginTop="@dimen/normal_padding"
                style="@style/game_detail_page_information_title"
                />
        <TextView
            	android:textColor="@color/dark_text_color"
                android:textStyle="normal"
                android:id="@+id/how_to_play_content"
                style="@style/game_detail_page_information_content"
                />
        <TextView
            	android:textColor="@color/dark_text_color"
                android:textStyle="normal"
                android:id="@+id/about_developer_title"
                android:text="About developer"
                android:layout_marginTop="@dimen/normal_padding"
                style="@style/game_detail_page_information_title"
                />
        <TextView
            	android:textColor="@color/dark_text_color"
                android:textStyle="normal"
                android:id="@+id/about_developer_content"
                style="@style/game_detail_page_information_content"
                />
    </LinearLayout>

</ScrollView>