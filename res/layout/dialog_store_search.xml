<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/gift_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionSearch"
        android:paddingLeft="@dimen/normal_padding"
        android:singleLine="true"
        android:contentDescription="@string/dialog_store_search_cd_gift_name"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/price_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:id="@+id/price_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="9" >

        <EditText
            android:id="@+id/from_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="numberDecimal"
            android:paddingLeft="@dimen/normal_padding"
            android:singleLine="true"
            android:contentDescription="@string/dialog_store_search_cd_from_price"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/dash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/to_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="numberDecimal"
            android:paddingLeft="@dimen/normal_padding"
            android:singleLine="true"
            android:contentDescription="@string/dialog_store_search_cd_to_price"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

</LinearLayout>