<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/normal_padding"
        android:paddingTop="@dimen/normal_padding" >

        <ImageView
            android:id="@+id/profile_info"
            android:layout_width="@dimen/icon_width_normal"
            android:layout_height="@dimen/chat_manager_tab_height"
            android:background="@drawable/image_tab_bg"
            android:paddingBottom="@dimen/chat_manager_tab_padding"
            android:paddingTop="@dimen/chat_manager_tab_padding"
            android:scaleType="fitCenter"
            android:contentDescription="@string/profile_tab_cd_profile_info"
            android:src="@drawable/profile_info" />

        <ImageView
            android:id="@+id/profile_posts"
            android:layout_width="@dimen/icon_width_normal"
            android:layout_height="@dimen/chat_manager_tab_height"
            android:background="@drawable/image_tab_bg"
            android:paddingBottom="@dimen/chat_manager_tab_padding"
            android:paddingTop="@dimen/chat_manager_tab_padding"
            android:scaleType="fitCenter"
            android:contentDescription="@string/profile_tab_cd_profile_posts"
            android:src="@drawable/profile_posts" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/down_shadow_height"
        android:background="@drawable/status_container_downshadow" >
    </View>

</LinearLayout>