<?xml version="1.0" encoding="utf-8"?>
<com.projectgoth.ui.widget.PostViewContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:migme="http://schemas.android.com/apk/res/com.projectgoth"
    android:id="@+id/post_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/retry_remove_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/retry_bar_height"
        android:background="@drawable/customborder"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/retry_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/holder_post_list_item_cd_retry_action"
            android:src="@drawable/ic_group_refresh" />

        <TextView
            android:id="@+id/retry_remove_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/remove_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/holder_post_list_item_cd_remove_action"
            android:src="@drawable/ad_close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/retry_remove_action"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/marker_icon"
            android:layout_width="@dimen/icon_width_xxsmall"
            android:layout_height="@dimen/icon_height_xxsmall"
            android:layout_marginRight="@dimen/small_margin"
            android:contentDescription="@string/holder_post_list_item_cd_marker_icon"
            android:src="@drawable/ad_mb_promoted" />

        <TextView
            android:id="@+id/marker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/promoted_color" />
    </LinearLayout>

    <ImageView
        android:id="@+id/author_picture"
        android:layout_width="@dimen/contact_pic_size_post_list_author"
        android:layout_height="@dimen/contact_pic_size_post_list_author"
        android:layout_below="@+id/marker"
        android:layout_marginLeft="@dimen/post_list_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:contentDescription="@string/holder_post_list_item_cd_author_picture"
        android:scaleType="fitXY"
        android:src="@drawable/icon_default_avatar" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/author_picture"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/author_picture"
        android:layout_marginRight="@dimen/large_margin"
        android:padding="@dimen/share_button_padding"
        android:src="@drawable/ad_share_grey" />

    <com.projectgoth.ui.widget.UsernameWithLabelsView
        android:id="@+id/author_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/author_picture"
        android:layout_below="@+id/marker"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/post_list_margin"
        android:layout_toLeftOf="@id/share"
        android:layout_toRightOf="@+id/author_picture"
        android:contentDescription="@string/holder_post_list_item_cd_author_details"
        migme:labelSize="@dimen/miglevel_size"
        migme:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_details"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/post_list_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_toLeftOf="@id/share"
        android:layout_toRightOf="@id/author_picture"
        android:singleLine="true"
        android:textColor="@color/default_timestamp"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:id="@+id/location_container"
        style="@style/PostLocationContainer"
        android:layout_below="@+id/timestamp"
        android:layout_toLeftOf="@id/share"
        android:layout_toRightOf="@+id/author_picture" >

        <ImageView style="@style/PostLocationPinImage" />

        <TextView
            android:id="@+id/txt_location"
            style="@style/PostLocationText" />
    </LinearLayout>

    <!-- Contains a list of mime content views -->

    <LinearLayout
        android:id="@+id/content_views_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_picture"
        android:layout_marginLeft="@dimen/post_list_margin"
        android:layout_marginRight="@dimen/post_list_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/root_post_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_views_container"
        android:layout_marginRight="@dimen/post_bg_shadow_width"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/root_post_background"
        android:padding="@dimen/normal_padding" >

        <ImageView
            android:id="@+id/root_author_picture"
            android:layout_width="@dimen/contact_pic_size_small"
            android:layout_height="@dimen/contact_pic_size_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/normal_margin"
            android:contentDescription="@string/holder_post_list_item_cd_root_author_picture"
            android:scaleType="fitXY"
            android:src="@drawable/icon_default_avatar"
            android:visibility="gone" />

        <com.projectgoth.ui.widget.UsernameWithLabelsView
            android:id="@+id/root_author_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@+id/root_author_picture"
            migme:labelSize="@dimen/label_size_small"
            migme:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/root_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/root_author_details"
            android:layout_toRightOf="@+id/root_author_picture"
            android:contentDescription="@string/holder_post_list_item_cd_root_timestamp"
            android:singleLine="true"
            android:textColor="@color/default_timestamp"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:id="@+id/root_location_container"
            style="@style/PostLocationContainer"
            android:layout_alignLeft="@id/root_timestamp"
            android:layout_below="@+id/root_timestamp"
            android:layout_toRightOf="@+id/root_author_details" >

            <ImageView style="@style/PostLocationPinImage" />

            <TextView
                android:id="@+id/txt_location"
                style="@style/PostLocationText" />
        </LinearLayout>

        <!-- Contains a list of mime content views -->

        <LinearLayout
            android:id="@+id/root_content_views_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/root_author_picture"
            android:layout_below="@+id/root_timestamp"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/root_reply_counter_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/root_author_picture"
            android:layout_below="@id/root_content_views_container"
            android:layout_marginTop="@dimen/small_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:visibility="gone" >

            <TextView
                android:id="@+id/root_reply_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_timestamp"
                android:textSize="@dimen/text_size_medium" />

            <ImageView
                android:id="@+id/dot"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
                android:contentDescription="@string/holder_post_list_item_cd_dot"
                android:src="@drawable/dot" />

            <TextView
                android:id="@+id/root_reshare_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_timestamp"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/feedback_buttons_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/post_buttons_container_height"
        android:layout_below="@id/root_post_container"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <!-- layout_height of all the views in the LinearLayout is fill_parent for a bigger clickable area -->

        <com.projectgoth.ui.widget.IconCounterView
            android:id="@+id/replies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/holder_post_list_item_cd_replies"
            android:gravity="center"
            android:paddingBottom="@dimen/normal_padding"
            android:paddingTop="@dimen/normal_padding"
            migme:iconSize="@dimen/icon_width_xxsmall"
            migme:iconSrc="@drawable/post_action_reply"
            migme:iconToTextSpace="@dimen/small_margin"
            migme:textSize="@dimen/text_size_large" />

        <com.projectgoth.ui.widget.IconCounterView
            android:id="@+id/reshares"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/holder_post_list_item_cd_reshares"
            android:gravity="center"
            android:paddingBottom="@dimen/normal_padding"
            android:paddingTop="@dimen/normal_padding"
            migme:iconSize="@dimen/icon_width_xxsmall"
            migme:iconSrc="@drawable/post_action_repost"
            migme:iconToTextSpace="@dimen/small_margin"
            migme:textSize="@dimen/text_size_large" />

        <!-- use IconTextView instead of IconCounterView for AD-1564 -->
        <com.projectgoth.ui.widget.IconTextView
            android:id="@+id/feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/holder_post_list_item_cd_feedback"
            android:gravity="center"
            android:paddingBottom="@dimen/normal_padding"
            android:paddingTop="@dimen/normal_padding"
            migme:iconSize="@dimen/icon_width_xxsmall"
            migme:iconToTextSpace="@dimen/small_margin"
            migme:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/watched_post_icon"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/holder_post_list_item_cd_watched_post_icon"
            android:paddingBottom="@dimen/normal_padding"
            android:paddingTop="@dimen/normal_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/watchlist_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spp_location_container"
        style="@style/PostLocationContainer"
        android:layout_below="@id/feedback_buttons_container" >

        <ImageView style="@style/PostLocationPinImage" />

        <TextView
            android:id="@+id/txt_location"
            style="@style/PostLocationText" />
    </LinearLayout>

    <!-- use fixed height which is same as display picture of user who left the emotional footprint -->

    <LinearLayout
        android:id="@+id/my_emote_footprint_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/contact_pic_size_small"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/feedback_buttons_container"
        android:layout_marginLeft="@dimen/post_list_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/my_emote_footprint"
            android:layout_width="@dimen/icon_width_xsmall"
            android:layout_height="@dimen/icon_height_xsmall"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/holder_post_list_item_cd_my_emote_footprint"
            android:scaleType="fitXY"
            android:src="@drawable/ad_emotibot" >
        </ImageView>

        <TextView
            android:id="@+id/footprint_counter_spp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/small_margin"
            android:textColor="@color/post_action_text_theme"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/set_footprint_arrow"
            android:layout_width="@dimen/set_footprint_arrow_size"
            android:layout_height="@dimen/set_footprint_arrow_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/small_margin"
            android:contentDescription="@string/holder_post_list_item_cd_set_footprint_arrow"
            android:scaleType="fitXY"
            android:src="@drawable/drawable_arrow_down" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_upload_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/twenty_transparent_white"
        android:orientation="horizontal" >
    </LinearLayout>

</com.projectgoth.ui.widget.PostViewContainer>