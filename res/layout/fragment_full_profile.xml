<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/large_margin"
        android:paddingTop="@dimen/large_margin" >

        <ImageView
            android:id="@+id/full_body_avatar"
            android:layout_width="@dimen/full_avatar_width"
            android:layout_height="@dimen/full_avatar_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/normal_margin"
            android:scaleType="fitXY"
            android:contentDescription="@string/fragment_full_profile_cd_full_body_avatar"
            android:src="@drawable/full_body_avatar_loading" />

        <View
            android:id="@+id/separator_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/up_shadow_height"
            android:layout_marginTop="@dimen/large_margin"
            android:background="@drawable/status_container_downshadow"
            android:visibility="gone" >
        </View>

        <RelativeLayout
            android:id="@+id/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/large_margin"
            android:visibility="gone" >

            <TextView
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_xxlarge" />

            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="@dimen/icon_width_xsmall"
                android:layout_height="@dimen/icon_height_xsmall"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/fragment_full_profile_cd_edit_icon"
                android:src="@drawable/ad_edit_grey" />
        </RelativeLayout>

        <View
            android:id="@+id/separator_down"
            android:layout_width="match_parent"
            android:layout_height="@dimen/up_shadow_height"
            android:background="@drawable/status_container_downshadow"
            android:visibility="gone" >
        </View>

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/joined_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/relationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/about_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projectgoth.ui.widget.ProfileProperty
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>