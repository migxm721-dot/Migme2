<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical" >

    <com.projectgoth.ui.widget.UserBasicDetails
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/normal_margin"
        android:gravity="center_vertical"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/chat_details"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/normal_margin"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/group_chat_icon"
            android:layout_width="@dimen/contact_pic_size_small"
            android:layout_height="@dimen/contact_pic_size_small"
            android:layout_marginRight="@dimen/normal_margin"
            android:contentDescription="@string/action_bar_chat_cd_group_chat_icon"
            android:src="@drawable/groupchat_home" />

        <TextView
            android:id="@+id/chatroom_icon"
            android:layout_width="@dimen/contact_pic_size_small"
            android:layout_height="@dimen/contact_pic_size_small"
            android:layout_marginRight="@dimen/normal_margin"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xxlarge"
            android:background="@drawable/solid_circle" />

        <TextView
            android:id="@+id/chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/participant_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>