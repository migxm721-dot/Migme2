<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:padding="@dimen/medium_padding">
    
    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/message_label"
	        android:textColor="@color/gray_text" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"	        
	        android:textSize="@dimen/text_size_xxlarge"
	        android:layout_weight="2" />
	    
	    <ImageButton
            android:id="@+id/btn_close"
            android:background="@drawable/ic_cancel"
            android:layout_width="@dimen/icon_width_small"
            android:layout_height="@dimen/icon_height_small"
            android:layout_weight="0"
            android:contentDescription="@string/fragment_captcha_cd_btn_close"
             />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/security_code_container"
        android:layout_below="@+id/message_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/xlarge_margin"
        >
	    <EditText
	        android:id="@+id/captcha_textfield"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/captcha_image_height"
	        android:layout_weight="2"
	        android:capitalize="none"
	        android:autoText="false"
	        android:singleLine="true"
	        android:background="@drawable/border_textbox"
	        android:textColor="@color/black"
	        android:layout_margin="@dimen/small_margin"
	        android:focusable="true"
            android:contentDescription="@string/fragment_captcha_cd_captcha_textfield"
	        android:focusableInTouchMode="true">
	        <requestFocus />
        </EditText>
	    
	    <ImageView
	        android:id="@+id/captcha_image"    
	        android:layout_weight="1"    
	        android:layout_width="@dimen/captcha_image_width"
	        android:layout_height="@dimen/captcha_image_height"
	        android:background="@color/black"
	        android:layout_margin="@dimen/small_margin"
            android:contentDescription="@string/fragment_captcha_cd_captcha_image"
	        android:scaleType="fitCenter" />
    </LinearLayout>
    
    <com.projectgoth.ui.widget.ButtonEx
               android:id="@+id/btn_continue"
               android:layout_below="@+id/security_code_container"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_size_large"
               android:gravity="center"
               android:layout_margin="@dimen/normal_margin"
               android:padding="@dimen/normal_padding"
               mig33:type="button_orange" /> 
</RelativeLayout>
