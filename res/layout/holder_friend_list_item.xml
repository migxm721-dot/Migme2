<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/normal_padding"
    android:paddingBottom="@dimen/normal_padding">

    <com.projectgoth.ui.widget.UserImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/contact_pic_size_medium"
        android:layout_height="@dimen/contact_pic_size_medium"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/large_margin"
        android:scaleType="fitXY"
        android:src="@drawable/icon_default_avatar" />

    <TextView
        android:id="@+id/IM_chat_icon"
        android:layout_width="@dimen/contact_pic_size_medium"
        android:layout_height="@dimen/contact_pic_size_medium"
        android:layout_alignBottom="@id/user_image"
        android:layout_alignLeft="@id/user_image"
        android:background="@drawable/solid_circle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xxxlarge" />

    <RelativeLayout
        android:id="@+id/text_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_padding"
        android:layout_marginRight="@dimen/normal_padding"
        android:layout_toRightOf="@id/user_image">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/default_text"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/check"
        android:layout_width="@dimen/icon_width_xxsmall"
        android:layout_height="@dimen/icon_width_xxsmall"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/medium_margin"
        android:contentDescription="@string/holder_friend_list_item_cd_check"
        android:src="@drawable/msg_one_tick" />
</RelativeLayout>