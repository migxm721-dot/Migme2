<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/large_padding">

    <ImageView
        android:id="@+id/gift_image"
        android:layout_width="@dimen/gift_icon_size_large"
        android:layout_height="@dimen/gift_icon_size_large"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/gifts_profile_image_size"
        android:layout_height="@dimen/gifts_profile_image_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <View
        android:layout_width="@dimen/gifts_profile_image_size"
        android:layout_height="@dimen/gifts_profile_image_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ad_profile_stroke"/>
</RelativeLayout>