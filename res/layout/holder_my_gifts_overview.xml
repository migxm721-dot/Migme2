<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:layout_marginLeft="@dimen/normal_margin"
    android:layout_marginRight="@dimen/normal_margin"
    android:background="@color/white"
    android:gravity="center" >

    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_margin"
        android:textColor="@color/dark_text_color"
        android:textSize="@dimen/text_size_large" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/badge_icon_size"
        android:layout_height="@dimen/badge_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_toRightOf="@+id/rank"
        android:contentDescription="@string/holder_badge_item_cd_picture"
        android:scaleType="fitXY"
        android:src="@drawable/ad_loadstatic_grey" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_toLeftOf="@+id/count"
        android:layout_toRightOf="@+id/icon"
        android:maxLines="2"
        android:textColor="@color/default_green"
        android:textSize="@dimen/text_size_xxlarge" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/gift_icon"
        android:ellipsize="end"
        android:textColor="@color/dark_text_color"
        android:textSize="@dimen/text_size_xxxxlarge" />

    <ImageView
        android:id="@+id/gift_icon"
        android:layout_width="@dimen/icon_width_small"
        android:layout_height="@dimen/icon_height_small"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:contentDescription="@string/holder_badge_item_cd_picture"
        android:scaleType="fitXY"
        android:src="@drawable/ad_gift_grey" />

</RelativeLayout>