<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
                android:id="@+id/cover_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cover_photo_height"
                android:background="@color/white"
                android:contentDescription="@string/fragment_profile_chat_cd_cover_photo"
                android:scaleType="centerCrop" />

        <!-- user info: username, level, country -->

        <TextView
            android:id="@+id/username"
            android:singleLine="true"
            android:textColor="@color/default_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_xxlarge"
            android:paddingTop="@dimen/large_padding"/>

        <com.projectgoth.ui.widget.UserBasicDetails
                android:id="@+id/user_basic_details"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/xsmall_margin"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/user_details"
            android:textSize="@dimen/text_size_large"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/large_padding"/>

        <!-- gifts, badges, fans -->

        <com.projectgoth.ui.widget.UserMiniDetails
                android:id="@+id/user_mini_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/large_padding"
                android:paddingBottom="@dimen/large_padding"
                android:visibility="visible" />

    </LinearLayout>

</ScrollView>