<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="@dimen/mini_profile_dialog_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mini_profile_dialog_padding_bottom"
        android:orientation="vertical" >

        <!-- action bar, cover photo and action buttons -->

        <RelativeLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cover_photo_height" >

            <ImageView
                android:id="@+id/cover_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/buttons_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/normal_margin"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/more_options_container"
                    android:layout_width="@dimen/profile_button_size"
                    android:layout_height="@dimen/profile_button_size"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:background="@color/black_half_transparent" >

                    <ImageView
                        android:id="@+id/more_options_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/fragment_profile_popup_cd_more_options_button"
                        android:scaleType="centerInside"
                        android:src="@drawable/ad_vmore_grey"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/overflow_marker"
                        android:layout_width="@dimen/overflow_marker_width"
                        android:layout_height="@dimen/overflow_marker_height"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:contentDescription="@string/fragment_profile_popup_cd_overflow_marker"
                        android:scaleType="fitXY"
                        android:src="@drawable/ad_solidarrow_black"
                        android:visibility="invisible" />
                </RelativeLayout>

                <com.projectgoth.ui.widget.ButtonEx
                    android:id="@+id/chat_button"
                    style="@style/Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/normal_padding"
                    android:visibility="gone"
                    mig33:type="button_orange" />
            </LinearLayout>
        </RelativeLayout>

        <!-- user info -->

        <RelativeLayout
            android:id="@+id/user_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_padding" >

            <com.projectgoth.ui.widget.UserImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/contact_pic_size_xlarge"
                android:layout_height="@dimen/contact_pic_size_xlarge"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/normal_margin"
                android:scaleType="fitXY"
                android:src="@drawable/icon_default_avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_image"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/default_green"
                    android:textSize="@dimen/text_size_xxlarge" />

                <com.projectgoth.ui.widget.UserBasicDetails
                    android:id="@+id/user_basic_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/xsmall_margin"
                    android:layout_marginTop="@dimen/small_margin" />

                <TextView
                    android:id="@+id/user_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>
        </RelativeLayout>

        <com.projectgoth.ui.widget.UserMiniDetails
            android:id="@+id/user_mini_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/large_padding"
            android:paddingTop="@dimen/large_padding"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/up_shadow_height"
            android:background="@color/gray_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/small_padding"
            android:paddingTop="@dimen/large_padding" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/send_gifts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableTop="@drawable/ad_giftlarge_grey"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/start_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableTop="@drawable/ad_chatlarge_grey"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>