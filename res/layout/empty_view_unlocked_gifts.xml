<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_scenario_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/unlocked_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:gravity="center"
        android:paddingLeft="@dimen/xxlarge_padding"
        android:paddingRight="@dimen/xxlarge_padding"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_medium" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/large_margin"
        android:src="@drawable/ad_illustgift" />

    <TextView
        android:id="@+id/unlocked_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:gravity="center"
        android:paddingLeft="@dimen/xxlarge_padding"
        android:paddingRight="@dimen/xxlarge_padding"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_xxlarge" />

    <TextView
        android:id="@+id/empty_list_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:gravity="center"
        android:paddingLeft="@dimen/xxlarge_padding"
        android:paddingRight="@dimen/xxlarge_padding"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>