<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/small_padding"
    android:paddingTop="@dimen/small_padding" >

    <ImageView
        android:id="@+id/display_pic"
        android:layout_width="@dimen/icon_width_normal"
        android:layout_height="@dimen/icon_height_normal"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/large_margin"
        android:padding="@dimen/small_padding"
        android:contentDescription="@string/holder_gift_recipient_item_cd_display_pic"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_toRightOf="@id/display_pic"
        android:textColor="@color/default_text"
        android:textSize="@dimen/text_size_xlarge" />

    <RadioButton
        android:id="@+id/radio_button"
        android:layout_width="@dimen/icon_width_xsmall"
        android:layout_height="@dimen/icon_height_xsmall"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/normal_margin"
        android:background="@drawable/radio_button_state"
        android:contentDescription="@string/holder_gift_recipient_item_cd_radio_button"
        android:button="@null"
        android:checked="false"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>