<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mig33="http://schemas.android.com/apk/src/com.projectgoth.ui.widget"
    android:id="@+id/settings_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/normal_padding"
    android:paddingLeft="@dimen/normal_padding"
    android:paddingTop="@dimen/normal_padding" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_height_normal"
        android:layout_height="@dimen/icon_height_normal"
        android:contentDescription="@string/holder_item_settings_cd_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_toRightOf="@+id/icon"
        android:textColor="@color/default_green"
        android:textSize="@dimen/text_size_large"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/normal_margin"
        android:textColor="@color/default_green"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal_margin"
            android:ellipsize="none"
            android:padding="@dimen/normal_padding"
            android:singleLine="true"
            android:textColor="@color/default_green"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/toggle_button"
            android:layout_width="@dimen/toggle_button_width"
            android:layout_height="@dimen/toggle_button_height"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@drawable/btn_toggle_bg"
            android:contentDescription="@string/holder_item_settings_cd_toggle_button"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

</RelativeLayout>