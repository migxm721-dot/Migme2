<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background" 
    android:paddingTop="@dimen/normal_margin">

    <RelativeLayout 
       	android:id="@+id/header"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
	    
	    <RelativeLayout
		    android:id="@+id/text_label"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/button_height_medium"
	        android:layout_marginLeft="@dimen/normal_margin"
	        android:layout_marginRight="@dimen/normal_margin"
	        android:layout_marginBottom="@dimen/xsmall_margin"
	        android:background="@color/white">
	    	
		    <TextView
		        android:layout_width="match_parent"
		        android:gravity="left|center"
		        android:layout_height="@dimen/button_height_medium"
		        android:background="@color/white"
		        android:paddingLeft="@dimen/normal_padding"
		        android:text="@string/deezer_mig_selection" />
	
		    <ImageView
		        android:id="@+id/unfold_arrow"
		        android:layout_width="@dimen/deezer_mig_select_arrowdown"
		        android:layout_height="@dimen/deezer_mig_select_arrowdown"
		        android:layout_marginRight="@dimen/normal_margin"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:scaleType="fitXY" 
		        android:visibility="visible"
		        android:src="@drawable/ad_arrowdown_grey" />
		    
		</RelativeLayout>
	    
	    <HorizontalScrollView
	        android:id="@+id/mig_container"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/normal_margin"
	        android:background="@color/white"
	        android:layout_below="@+id/text_label"
	        >
	        <LinearLayout
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="horizontal">
		    	<LinearLayout
		    	    android:id="@+id/mig_channel_container"
		    		android:padding="@dimen/normal_padding"
		    		android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="horizontal">
		    	</LinearLayout>
	    	</LinearLayout>
	    </HorizontalScrollView>
	    
		<RelativeLayout
		    android:id="@+id/genre_selector"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/button_height_medium"
	        android:layout_below="@+id/mig_container"
	        android:layout_marginLeft="@dimen/normal_margin"
	        android:layout_marginRight="@dimen/normal_margin"
	        android:background="@color/white">
	    	
		    <TextView
		        android:id="@+id/cur_genre"
		        android:layout_width="match_parent"
		        android:gravity="left|center"
		        android:layout_height="@dimen/button_height_medium"
		        android:background="@color/white"
		        android:paddingLeft="@dimen/normal_padding"
		        android:text="@string/deezer_select_genre" />
	
		    <ImageView
		        android:layout_width="@dimen/genre_dropdown"
		        android:layout_height="@dimen/genre_dropdown"
		        android:layout_alignParentBottom="true"
		        android:layout_alignParentRight="true"
		        android:src="@drawable/dropdown_corner" />
		    
		</RelativeLayout>
    </RelativeLayout>
    
    <View
        android:id="@+id/place_holder"
        android:layout_below="@+id/header"
        android:layout_height="0dp"
        android:layout_width="0dp">
	</View>
    
    <GridView
        android:id="@+id/channels_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalSpacing="@dimen/small_margin"
        android:horizontalSpacing="@dimen/small_margin"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_below="@+id/place_holder"
        android:visibility="gone"
        android:numColumns="2" >

    </GridView>
    
    <FrameLayout
        android:id="@+id/empty_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/place_holder"
        android:layout_marginTop="@dimen/xlarge_margin"/>
    
    <include
		android:id="@+id/deezer_playback"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:visibility="gone"
		layout="@layout/deezer_playback" />


</RelativeLayout>
