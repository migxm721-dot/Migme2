<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/detail_background">

        <ImageView
            android:id="@+id/radio_category_cover"
            android:layout_width="@dimen/deezer_detail_cover_size"
            android:layout_height="@dimen/deezer_detail_cover_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/deezer_playback_margin_large"
            android:src="@drawable/ic_default_cover_loading" />

        <ImageView
            android:id="@+id/deezer_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/deezer_playback_margin"
            android:layout_marginTop="@dimen/deezer_playback_margin"
            android:src="@drawable/ic_deezer_banner_white" />

        <TextView
            android:id="@+id/radio_category_name"
            style="@style/DeezerPlayback.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_category_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/deezer_playback_margin" />

        <RelativeLayout
            android:id="@+id/actions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_category_name"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/share_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/deezer_playback_margin"
                android:src="@drawable/ic_music_share" />

            <ImageView
                android:id="@+id/favorite_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/share_container"
                android:padding="@dimen/deezer_playback_margin"
                android:src="@drawable/ad_favourite_white" />
        </RelativeLayout>

        <ListView
            android:id="@+id/deezer_track_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/actions_container"
            android:layout_marginTop="@dimen/deezer_playback_margin"
            android:divider="@color/light_grey_divider"
            android:dividerHeight="@dimen/list_divider_height"></ListView>
    </RelativeLayout>

    <include
        android:id="@+id/deezer_playback"
        layout="@layout/deezer_playback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</LinearLayout>