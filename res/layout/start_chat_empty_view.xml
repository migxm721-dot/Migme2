<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_background">

    <LinearLayout
            android:id="@+id/bubble_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/dark_gray_background">

        <com.projectgoth.ui.widget.GifImageView
                android:id="@+id/empty_chat_list_icon"
                android:layout_width="@dimen/icon_width_xlarge"
                android:layout_height="@dimen/icon_height_xlarge"
                android:layout_marginTop="@dimen/xlarge_margin"
                android:src="@drawable/bubble_burst"
                android:scaleType="fitCenter"/>

        <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:textSize="@dimen/text_size_xxlarge"
                android:textColor="@color/start_chat_empty_view_text"/>

        <TextView
                android:id="@+id/hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/large_margin"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/start_chat_empty_view_text"/>

    </LinearLayout>

    <TextView
            android:id="@+id/recommend_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_padding"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/start_chat_empty_view_text"
            android:background="@color/white"/>

    <FrameLayout
            android:id="@+id/recommend_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>