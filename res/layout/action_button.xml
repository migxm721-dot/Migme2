<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/action_button_width"
    android:layout_height="@dimen/action_button_height" >

    <ImageView
        android:id="@+id/button_icon"
        android:layout_width="@dimen/action_button_width"
        android:layout_height="@dimen/action_button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/action_button_cd_button_icon"
        android:padding="@dimen/medium_padding"

        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/notification_counter"
        android:layout_width="@dimen/notification_counter_width"
        android:layout_height="@dimen/notification_counter_height"
        android:layout_alignLeft="@+id/button_icon"
        android:layout_alignTop="@+id/button_icon"
        android:layout_marginLeft="@dimen/xsmall_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="@drawable/ad_counter_red"
        android:gravity="center"
        android:textSize="@dimen/text_size_xsmall"
        android:textStyle="normal"
        android:visibility="invisible" />

</merge>